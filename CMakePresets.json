{
	"version": 3,
	"configurePresets": [
		{
			"name": "dev-base",
			"description": "Base profile for all profiles.",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}"
		},
		{
			"name": "windows-base",
			"description": "Base profile for all Windows profiles.",
			"inherits": "dev-base",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "windows-x64-debug",
			"displayName": "Windows x64 Debug",
			"description": "Windows x64 profile with debug information.",
			"inherits": "windows-base",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "windows-x64-release",
			"displayName": "Windows x64 Release",
			"description": "Windows x64 profile.",
			"inherits": "windows-x64-debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "linux-base",
			"description": "Base profile for all Linux profiles.",
			"inherits": "dev-base",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc",
				"CMAKE_CXX_COMPILER": "gcc"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "linux-x64-debug",
			"displayName": "Linux x64 Debug",
			"description": "Linux x64 profile with debug information.",
			"inherits": "linux-base",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "linux-x64-release",
			"displayName": "Linux x64 Release",
			"description": "Linux x64 profile.",
			"inherits": "linux-x64-debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	]
}